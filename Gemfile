source 'https://rubygems.org'

# Gems with native extensions that may trigger stdckdint.h error on macOS-14 with Ruby 3.4
gem 'faraday'

# Native extension gems - these require C compilation
gem 'json', '>= 2.7.0'           # JSON parsing with native extensions
gem 'ffi', '>= 1.16.0'           # Foreign Function Interface - native extension
gem 'nokogiri', '>= 1.16.0'      # HTML/XML parser with native extensions

# Fastlane and its dependencies (heavy native extension usage)
gem 'fastlane', '>= 2.220.0'

# Additional gems with native extensions for thorough testing
gem 'puma', '>= 6.4.0'           # Web server with native extensions
gem 'msgpack', '>= 1.7.0'        # MessagePack with native extensions
